FROM nginx:1.29-alpine

RUN apk add --no-cache openssl curl

RUN mkdir -p /etc/ssl

COPY nginx.conf /etc/nginx/nginx.conf
COPY conf.d/ /etc/nginx/conf.d/

COPY certs/cloudflare-origin-root-domain.crt /etc/ssl/cloudflare-root.crt
COPY certs/cloudflare-origin-root-domain.key /etc/ssl/cloudflare-root.key

RUN chmod 644 /etc/ssl/cloudflare-root.crt && \
    chmod 600 /etc/ssl/cloudflare-root.key && \
    chown root:root /etc/ssl/cloudflare-root.*

RUN mkdir -p /var/log/nginx

RUN nginx -t

EXPOSE 80 443

CMD ["nginx", "-g", "daemon off;"]
