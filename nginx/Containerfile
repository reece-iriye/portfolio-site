FROM nginx:1.29-alpine

RUN apk add --no-cache openssl curl

RUN mkdir -p /etc/ssl

COPY nginx.conf /etc/nginx/nginx.conf
COPY conf.d/ /etc/nginx/conf.d/

COPY certs/cloudflare-origin.pem /etc/ssl/cloudflare-origin.pem
COPY certs/cloudflare-origin.key /etc/ssl/cloudflare-origin.key

RUN chmod 644 /etc/ssl/cloudflare-origin.pem && \
    chmod 600 /etc/ssl/cloudflare-origin.key && \
    chown root:root /etc/ssl/cloudflare-origin.*

RUN mkdir -p /var/log/nginx

RUN nginx -t

EXPOSE 80 443

CMD ["nginx", "-g", "daemon off;"]
